@model Artist
@{ 
    string title = ViewBag.Action;
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ArtistFname">First Name</label>
        <input asp-for="ArtistFname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ArtistLname">Last Name or Group Name</label>
        <input asp-for="ArtistLname" class="form-control" />
    </div>

    <div>
        <label asp-for="ArtistTypeCode">Artist Type</label>
        <select asp-for="ArtistTypeCode" class="form-control">
            <option value="select a type">Select a Type</option>
            @foreach(ArtistType t in ViewBag.ArtistTypes)
            {
                <option value="@t.ArtistTypeCode">@t.ArtistTypeDesc</option>
            }
        </select>
    </div><br />

    <input type="hidden" asp-for="ArtistId" />
    <button type="submit" class="btn btn-primary"> @ViewBag.Action</button>
    <a asp-controller="Artist" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
