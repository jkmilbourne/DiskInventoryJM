@model Disk
@{
    string title = ViewBag.Action;
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DiskName">Disk Name</label>
        <input asp-for="DiskName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReleaseDate">Release Date</label>
        <input asp-for="ReleaseDate" class="form-control" />
    </div>

    <div>
        <label asp-for="GenreCode">Genre</label>
        <select asp-for="GenreCode" class="form-control">
            <option value="select a genre">Select a Genre</option>
            @foreach (Genre g in ViewBag.Genres)
            {
                <option value="@g.GenreCode">@g.GenreDesc</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="StatusCode">Status</label>
        <select asp-for="StatusCode" class="form-control">
            <option value="select a status">Select a Status</option>
            @foreach (Status s in ViewBag.Statuses)
            {
                <option value="@s.StatusCode">@s.StatusDesc</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="DiskTypeId">Disk Type</label>
        <select asp-for="DiskTypeId" class="form-control">
            <option value="select a type">Select a Disk Type</option>
            @foreach (DiskType dt in ViewBag.DiskTypes)
            {
                <option value="@dt.DiskTypeCode">@dt.DiskTypeDesc</option>
            }
        </select>
    </div><br />

    <input type="hidden" asp-for="DiskId" />
    <button type="submit" class="btn btn-primary"> @ViewBag.Action</button>
    <a asp-controller="Artist" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

