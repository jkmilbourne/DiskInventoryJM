@model List<Borrower>
@{
    ViewData["Title"] = "Borrower List";
}

<h2>Borrower List</h2>
<a asp-controller="Borrower" asp-action="Add">Add a Borrower</a>
@*<a asp-controller="Movie" asp-action="Add">Add New Movie</a>*@
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Initial</th>
            <th>Last Name</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var borrower in Model)
        {
            <tr>
                <td>@borrower.Fname</td>
                <td>@borrower.Mi</td>
                <td>@borrower.Lname</td>
                <td>@borrower.Phone</td>
                <td>
                    <a asp-controller="Borrower" asp-action="Edit" asp-route-id="@borrower.BorrowerId">Edit</a>
                    <a asp-controller="Borrower" asp-action="Delete" asp-route-id="@borrower.BorrowerId">Delete</a>
                </td>
                @*<td>
                        <a asp-controller="Movie" asp-action="Edit"
                           asp-route-id="@movie.MovieId"
                           asp-route-slug="@movie.Slug">Edit</a>
                        <a asp-controller="Movie" asp-action="Delete"
                           asp-route-id="@movie.MovieId"
                           asp-route-slug="@movie.Slug">Delete</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>

